<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <title>Disaster Pulse | @ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" type="image/x-icon" href="~/images/favicon.png" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-warning shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-page="/Index">
                    <img src="~/images/favicon.png" alt="Logo" style="height: 40px; margin-right: 10px;" />
                    <span class="fw-bold text-white">Disaster Pulse</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-page="/Dashboard">Dashboard</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container flex-fill my-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 border-top mt-auto">
        <span>&copy; @DateTime.Now.Year - Disaster Pulse</span>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Styles", required: false)
    @RenderSection("Scripts", required: false)
</body>

</html>
