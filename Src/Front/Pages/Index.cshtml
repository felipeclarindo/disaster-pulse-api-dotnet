@page
@model DisasterPulseApiDotnet.Src.Front.Pages.IndexModel

@{
    ViewData["Title"] = "Alertas";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5">

    <div class="text-center mb-4">
        <img src="~/images/favicon.png" alt="Logo" style="height: 80px;" />
        <h1 class="text-orange mt-3">Alertas de Desastres Naturais</h1>
        <a asp-page="Create" class="btn btn-warning mt-3">Novo Alerta</a>
    </div>

    @if (Model.Alerts.Any())
    {
        <table class="table table-bordered shadow-sm">
            <thead class="table-warning text-white" style="background-color: #f57c00;">
                <tr>
                    <th>Tópico</th>
                    <th>Descrição</th>
                    <th>ID do País</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alert in Model.Alerts)
                {
                    <tr>
                        <td>@alert.Topic</td>
                        <td>@alert.Description</td>
                        <td>@alert.CountryId</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-light text-center mt-4">Nenhum alerta encontrado.</div>
    }
</div>

<style>
    body {
        background-color: #fffefc;
        color: #333;
    }

    .text-orange {
        color: #f57c00;
    }
</style>
